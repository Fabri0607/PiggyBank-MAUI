<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PiggyBank_MAUI.Views.LinkTransactionModalPage"
             BackgroundColor="White">

    <ContentPage.Resources>
        <Color x:Key="Verde-background">#00986C</Color>
        <Color x:Key="Verde-muy-claro">#DFF7E2</Color>
        <Color x:Key="Verde-Principal">#008259</Color>
        <Color x:Key="Azul-Botones">#0068FF</Color>
        <Color x:Key="Rojo-Cancelar">#d20606</Color>
    </ContentPage.Resources>

    <Grid Padding="20">
        <Border
            BackgroundColor="White"
            StrokeThickness="0"
            StrokeShape="RoundRectangle 20"
            Padding="20">
            <VerticalStackLayout Spacing="15">
                <Label 
                    Text="Asignar Transacción a Meta"
                    FontSize="Large"
                    FontAttributes="Bold"
                    FontFamily="PoppinsRegular"
                    HorizontalOptions="Center" />

                <VerticalStackLayout Spacing="10">
                    <Label 
                        Text="ID de Transacción"
                        FontSize="Medium"
                        FontAttributes="Bold"
                        FontFamily="PoppinsRegular" />
                    <Border
                        Stroke="{StaticResource Verde-muy-claro}"
                        StrokeThickness="0"
                        BackgroundColor="{StaticResource Verde-muy-claro}"
                        StrokeShape="RoundRectangle 20">
                        <Entry
                            x:Name="TransactionIdEntry"
                            Placeholder="ID de la transacción"
                            Keyboard="Numeric"
                            BackgroundColor="Transparent"
                            TextColor="Black"
                            Margin="10,0"
                            PlaceholderColor="Gray"
                            FontFamily="PoppinsRegular" />
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="10">
                    <Label 
                        Text="Monto Asignado"
                        FontSize="Medium"
                        FontAttributes="Bold"
                        FontFamily="PoppinsRegular" />
                    <Border
                        Stroke="{StaticResource Verde-muy-claro}"
                        StrokeThickness="0"
                        BackgroundColor="{StaticResource Verde-muy-claro}"
                        StrokeShape="RoundRectangle 20">
                        <Entry
                            x:Name="AssignedAmountEntry"
                            Placeholder="Monto asignado"
                            Keyboard="Numeric"
                            BackgroundColor="Transparent"
                            TextColor="Black"
                            Margin="10,0"
                            PlaceholderColor="Gray"
                            FontFamily="PoppinsRegular" />
                    </Border>
                </VerticalStackLayout>

                <Grid ColumnDefinitions="*,*">
                    <Button 
                        Grid.Column="0"
                        Text="Cancelar"
                        FontFamily="PoppinsRegular"
                        BackgroundColor="{StaticResource Rojo-Cancelar}"
                        TextColor="White"
                        FontSize="Medium"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        Margin="0,0,5,0"
                        Clicked="CancelButton_Clicked" />
                    <Button 
                        Grid.Column="1"
                        Text="Asignar"
                        FontFamily="PoppinsRegular"
                        BackgroundColor="{StaticResource Verde-background}"
                        TextColor="White"
                        FontSize="Medium"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        Margin="5,0,0,0"
                        Clicked="AssignButton_Clicked" />
                </Grid>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>