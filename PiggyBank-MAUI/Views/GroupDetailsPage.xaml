<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PiggyBank_MAUI.Converters"
             x:Class="PiggyBank_MAUI.Views.GroupDetailsPage"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <Color x:Key="Verde-background">#00986C</Color>
        <Color x:Key="Verde-muy-claro">#DFF7E2</Color>
        <Color x:Key="Verde-Principal">#008259</Color>
        <Color x:Key="Azul-Botones">#0068FF</Color>
        <local:BalanceColorConverter x:Key="BalanceColorConverter" />
    </ContentPage.Resources>

    <Grid BackgroundColor="{StaticResource Verde-background}">
        <!-- Header -->
        <Label 
            Text="{Binding GroupName, StringFormat='Grupo: {0}'}"
            TextColor="White"
            FontSize="30"
            HorizontalOptions="Center"
            FontAttributes="Bold"
            Margin="0,8,0,0"
            FontFamily="PoppinsRegular"
            VerticalOptions="Start" />

        <!-- Main Content -->
        <Border
            BackgroundColor="White"
            StrokeThickness="0"
            VerticalOptions="End"
            HeightRequest="655"
            Padding="30,50"
            StrokeShape="RoundRectangle 40,40,0,0">

            <ScrollView>
                <VerticalStackLayout Spacing="20">
                    <!-- Group Info Section -->
                    <VerticalStackLayout Spacing="10">
                        <Label 
                            Text="Detalles del Grupo"
                            FontSize="Medium"
                            FontAttributes="Bold"
                            FontFamily="PoppinsRegular" />
                        <Label 
                            Text="{Binding GroupDescription, FallbackValue='Sin descripción'}"
                            FontSize="Small"
                            TextColor="Gray"
                            FontFamily="PoppinsRegular" />
                        <Button 
                            x:Name="UpdateGroupButton"
                            Text="Editar Detalles"
                            FontFamily="PoppinsRegular"
                            BackgroundColor="{StaticResource Verde-background}"
                            TextColor="White"
                            FontSize="Medium"
                            FontAttributes="Bold"
                            CornerRadius="40" />
                    </VerticalStackLayout>

                    <!-- Members Section -->
                    <VerticalStackLayout Spacing="10">
                        <Label 
                            Text="Miembros"
                            FontSize="Medium"
                            FontAttributes="Bold"
                            FontFamily="PoppinsRegular"
                            Margin="0,20,0,0" />
                        <Border
                            Stroke="{StaticResource Verde-muy-claro}"
                            StrokeThickness="0"
                            BackgroundColor="{StaticResource Verde-muy-claro}"
                            StrokeShape="RoundRectangle 20">
                            <Entry
                                x:Name="InviteMemberEntry"
                                Placeholder="Correo del nuevo miembro"
                                BackgroundColor="Transparent"
                                TextColor="Black"
                                Margin="10,0"
                                PlaceholderColor="Gray"
                                FontFamily="PoppinsRegular" />
                        </Border>
                        <Button 
                            x:Name="InviteMemberButton"
                            Text="Invitar Miembro"
                            FontFamily="PoppinsRegular"
                            BackgroundColor="{StaticResource Verde-background}"
                            TextColor="White"
                            FontSize="Medium"
                            FontAttributes="Bold"
                            CornerRadius="40" />
                        <CollectionView x:Name="MembersCollectionView"
                                       ItemsSource="{Binding Members}"
                                       HeightRequest="150">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Stroke="{StaticResource Verde-muy-claro}"
                                        StrokeThickness="0"
                                        BackgroundColor="{StaticResource Verde-muy-claro}"
                                        StrokeShape="RoundRectangle 20"
                                        Padding="10"
                                        Margin="0,5">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label 
                                                Grid.Column="0"
                                                Text="{Binding NombreUsuario, FallbackValue='Nombre no disponible'}"
                                                FontSize="Medium"
                                                FontFamily="PoppinsRegular"
                                                VerticalOptions="Center" />
                                            <Button 
                                                Grid.Column="1"
                                                Text="Eliminar"
                                                FontFamily="PoppinsRegular"
                                                BackgroundColor="{StaticResource Verde-background}"
                                                TextColor="White"
                                                FontSize="Small"
                                                CornerRadius="20"
                                                Padding="10,5"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveMemberCommand}"
                                                CommandParameter="{Binding .}"
                                                IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsAdmin}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!-- Expenses Section -->
                    <VerticalStackLayout Spacing="10">
                        <Label 
                            Text="Gastos Compartidos"
                            FontSize="Medium"
                            FontAttributes="Bold"
                            FontFamily="PoppinsRegular"
                            Margin="0,20,0,0" />
                        <Button 
                            x:Name="RegisterExpenseButton"
                            Text="Registrar Gasto"
                            FontFamily="PoppinsRegular"
                            BackgroundColor="{StaticResource Verde-background}"
                            TextColor="White"
                            FontSize="Medium"
                            FontAttributes="Bold"
                            CornerRadius="40" />
                        <CollectionView x:Name="ExpensesCollectionView"
                                       ItemsSource="{Binding Expenses}"
                                       HeightRequest="150">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Stroke="{StaticResource Verde-muy-claro}"
                                        StrokeThickness="0"
                                        BackgroundColor="{StaticResource Verde-muy-claro}"
                                        StrokeShape="RoundRectangle 20"
                                        Padding="10"
                                        Margin="0,5">
                                        <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                                            <VerticalStackLayout Grid.Column="0" Spacing="5">
                                                <Label 
                                                    Text="{Binding Descripcion, FallbackValue='Sin descripción'}"
                                                    FontSize="Medium"
                                                    FontFamily="PoppinsRegular"
                                                    TextColor="Black"/>
                                                <Label 
                                                    Text="{Binding Monto, StringFormat='{0:C}'}"
                                                    FontSize="Small"
                                                    TextColor="Gray"
                                                    FontFamily="PoppinsRegular" />
                                                <Label 
                                                    Text="{Binding Estado, StringFormat='Estado: {0}'}"
                                                    FontSize="Small"
                                                    TextColor="Gray"
                                                    FontFamily="PoppinsRegular" />
                                            </VerticalStackLayout>
                                            <Label 
                                                Grid.Column="1"
                                                Text="{Binding Fecha, StringFormat='{0:d}'}"
                                                FontSize="Small"
                                                TextColor="Gray"
                                                FontFamily="PoppinsRegular"
                                                VerticalOptions="Center" />
                                            <Button 
                                                Grid.Column="2"
                                                Text="Aceptar"
                                                FontFamily="PoppinsRegular"
                                                BackgroundColor="{StaticResource Verde-background}"
                                                TextColor="White"
                                                FontSize="Small"
                                                CornerRadius="20"
                                                Padding="10,5"
                                                Margin="5,0"
                                                Clicked="AcceptButton_Clicked"
                                                CommandParameter="{Binding .}"
                                                IsVisible="{Binding IsPendiente}" />        
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!-- Balances Section -->
                    <VerticalStackLayout Spacing="10">
                        <Label 
                            Text="Balances"
                            FontSize="Medium"
                            FontAttributes="Bold"
                            FontFamily="PoppinsRegular"
                            Margin="0,20,0,0" />
                        <CollectionView x:Name="BalancesCollectionView"
                                       ItemsSource="{Binding Balances}"
                                       HeightRequest="150">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Stroke="{StaticResource Verde-muy-claro}"
                                        StrokeThickness="0"
                                        BackgroundColor="{StaticResource Verde-muy-claro}"
                                        StrokeShape="RoundRectangle 20"
                                        Padding="10"
                                        Margin="0,5">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label 
                                                Grid.Column="0"
                                                Text="{Binding NombreUsuario, FallbackValue='Usuario desconocido'}"
                                                FontSize="Medium"
                                                FontFamily="PoppinsRegular"
                                                VerticalOptions="Center" />
                                            <Label 
                                                Grid.Column="1"
                                                Text="{Binding Saldo, StringFormat='{0:C}', FallbackValue='0.00'}"
                                                FontSize="Medium"
                                                TextColor="{Binding Saldo, Converter={StaticResource BalanceColorConverter}}"
                                                FontFamily="PoppinsRegular"
                                                VerticalOptions="Center" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <!-- Group Actions -->
                    <VerticalStackLayout Spacing="10">
                        <Button 
                            x:Name="LeaveGroupButton"
                            Text="Salir del Grupo"
                            FontFamily="PoppinsRegular"
                            BackgroundColor="{StaticResource Verde-background}"
                            TextColor="White"
                            FontSize="Medium"
                            FontAttributes="Bold"
                            CornerRadius="40" />
                        <Button 
                            x:Name="DeleteGroupButton"
                            Text="Eliminar Grupo"
                            FontFamily="PoppinsRegular"
                            BackgroundColor="{StaticResource Verde-background}"
                            TextColor="White"
                            FontSize="Medium"
                            FontAttributes="Bold"
                            CornerRadius="40"
                            IsVisible="{Binding IsAdmin}" />
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>
        </Border>
    </Grid>
</ContentPage>