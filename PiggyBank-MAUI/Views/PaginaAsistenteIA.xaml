<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PiggyBank_MAUI.Views.PaginaAsistenteIA"
             Title="PaginaAsistenteIA">

    <Grid>
        <!-- Main Content Area -->
        <Border
            BackgroundColor="White"
            StrokeThickness="0"
            VerticalOptions="FillAndExpand"
            Padding="0"
            StrokeShape="RoundRectangle 35,35,0,0">

            <Grid RowDefinitions="*,Auto">
                <!-- Chat Content Area -->
                <ScrollView Grid.Row="0" Padding="30,60,30,30">
                    <VerticalStackLayout 
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Spacing="20">

                        <!-- Piggy Bank Icon -->
                        <Image Source="piggybank_logo_new.png" />

                        <!-- Main Text -->
                        <Label 
                            Text="Realiza consultas sobre tus finanzas personales"
                            FontSize="18"
                            TextColor="Black"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            FontFamily="PoppinsRegular"
                            LineHeight="1.2" />

                    </VerticalStackLayout>
                </ScrollView>

                <!-- Input Area -->
                <Border
                    Grid.Row="1"
                    BackgroundColor="#00C896"
                    StrokeThickness="0"
                    Margin="20,0,20,20"
                    Padding="20,15"
                    StrokeShape="RoundRectangle 25">

                    <Grid ColumnDefinitions="*,Auto">
                        <Entry 
                            x:Name="MessageEntry"
                            Placeholder="Escribe aquí..."
                            PlaceholderColor="White"
                            TextColor="White"
                            FontSize="16"
                            FontFamily="PoppinsRegular"
                            BackgroundColor="Transparent"
                            Grid.Column="0" />

                        <Button 
                            x:Name="SendButton"
                            Text="→"
                            BackgroundColor="White"
                            TextColor="#00C896"
                            FontSize="20"
                            FontAttributes="Bold"
                            CornerRadius="25"
                            WidthRequest="50"
                            HeightRequest="50"
                            Grid.Column="1" />
                    </Grid>

                </Border>
            </Grid>

        </Border>

    </Grid>

</ContentPage>